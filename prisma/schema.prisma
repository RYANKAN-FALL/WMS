// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  username     String        @unique
  email        String?       @unique
  password     String
  nama_lengkap String
  role         String        @default("staff") // admin, staff, supervisor
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  products     Product[]
  inventoryLogs InventoryLog[]  // Added relation to InventoryLog
  orders       Order[]           // Added relation to Order
  sessions     Session[]
  accounts     Account[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}

model RackLocation {
  id        String   @id @default(cuid())
  name      String   @unique  // e.g. "Rak-A1-01"
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  sku         String      @unique
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  description String?
  price       Decimal
  stock       Int         @default(0)
  minStock    Int         @default(0)
  imageUrl    String?
  rackLocationId String?
  rackLocation RackLocation? @relation(fields: [rackLocationId], references: [id], onDelete: SetNull)
  userId      String      // User who created the product
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  inventoryLogs InventoryLog[]
  orders        OrderItem[]
}

model InventoryLog {
  id           String   @id @default(cuid())
  productId    String
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  type         String   // "IN" or "OUT"
  quantity     Int
  reason       String   // "restock", "sale", "damage", etc.
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
}

model Order {
  id          String       @id @default(cuid())
  orderId     String       @unique
  status      String       // "pending", "processing", "shipped", "delivered", "cancelled"
  totalAmount Decimal
  userId      String       // User who placed the order
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int
  price     Decimal  // Price at time of order
}

model Session {
  id                 String   @id @default(cuid())
  sessionToken       String   @unique
  userId             String
  expires            DateTime
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id        String   @id @default(cuid())
  identifier String
  token     String   @unique
  expires   DateTime
}
